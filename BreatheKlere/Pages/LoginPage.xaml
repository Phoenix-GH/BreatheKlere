<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BreatheKlere.LoginPage">
    <ContentPage.Content>
        <ScrollView BackgroundColor="#94b2d6">
            <StackLayout VerticalOptions="StartAndExpand">
                
                <Entry x:Name="emailEntry" Placeholder="Email" HorizontalOptions="Fill" Margin="20, 30, 20, 0" TextColor="White" Keyboard="Email" BackgroundColor="Transparent" PlaceholderColor="White" />
                <Entry x:Name="passwordEntry" Placeholder="Password" HorizontalOptions="Fill" Margin="20, 30, 20, 0" TextColor="White" IsPassword="true" BackgroundColor="Transparent" PlaceholderColor="White" />
                <StackLayout Orientation="Horizontal" Margin="0, 20, 20, 20" Padding="20" HorizontalOptions="Center">
                    <Button Text="Register new user" Clicked="OnRegistration" HorizontalOptions="Start" WidthRequest="150" HeightRequest="50"  TextColor="White"/>
                    <Button Text="Next" Clicked="OnLogin" HorizontalOptions="End" WidthRequest="150" HeightRequest="50"  TextColor="White"/>
     
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
