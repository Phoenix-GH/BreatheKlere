<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BreatheKlere.LoginPage">
    <ContentPage.Content>
        <ScrollView BackgroundColor="#94b2d6">
            <StackLayout VerticalOptions="StartAndExpand">
                <Entry x:Name="usernameEntry" Placeholder="Name" HorizontalOptions="Fill" Margin="20, 30, 20, 0" TextColor="White" BackgroundColor="Transparent" PlaceholderColor="White"/>
                <Entry x:Name="emailEntry" Placeholder="Email" HorizontalOptions="Fill" Margin="20, 30, 20, 0" TextColor="White" Keyboard="Email" BackgroundColor="Transparent" PlaceholderColor="White" />
                <Entry x:Name="postcodeEntry" Placeholder="Home Postcode" HorizontalOptions="Fill" Margin="20, 30, 20, 0" TextColor="White" BackgroundColor="Transparent" PlaceholderColor="White" />
                <Picker x:Name="genderPicker" Title="M/F" Margin="20, 30, 20, 0" SelectedIndexChanged="Handle_SelectedIndexChanged" BackgroundColor="Transparent" TextColor="White"/>
               
                <Button Text="Next" Clicked="OnLogin" HorizontalOptions="End" WidthRequest="150" HeightRequest="50" Margin="0, 20, 20, 20" TextColor="White"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
