<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BreatheKlere.LoginPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="StartAndExpand">
                <Label Text="BreathKlere" TextColor="Navy" FontSize="40" HorizontalOptions="Center" Margin="0, 100, 0, 0" />
                <Entry x:Name="usernameEntry" Placeholder="User name" HorizontalOptions="Center" Margin="0, 15, 0, 0" />
                <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Password" Margin="0, 15, 0, 0" HorizontalOptions="Center" />
                <Button Text="Login" Clicked="OnLogin" />
                <Button Text="Forgot Password" Clicked="OnForgotPassword" />
                <Label x:Name="messageLabel" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
